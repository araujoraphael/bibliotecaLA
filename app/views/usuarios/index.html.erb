<% if usuario_signed_in? %>
  <% if current_usuario.isadmin %>
    <h3> Localizar Usuário </h3>
    <% form_tag usuarios_path, method: :get do %>
    
       <%= label_tag :email %>
       <%= text_field_tag :email %>
       <%= label_tag :name %>
       <%= text_field_tag :name %>
       <%= submit_tag 'Pesquisar' %>

    <% end %>
  <br/>
  <% if @usuarios.any? %>
    <% bgcolor = "#9CC" %>
     <table>
      <tr bgcolor=<%= bgcolor %> >
        <th>Nome</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
     <% @usuarios.sort! { |a,b| a.name.downcase <=> b.name.downcase } %>
     <% @usuarios.each do |usuario| %>
       <% if bgcolor == "#9CC" then 
           bgcolor = "#FFF"
           else bgcolor = "#9CC" 
           end
        %>
     <tr bgcolor=<%= bgcolor %> >
      <td><%= usuario.name %></td>
      <td><%= usuario.email %></td>
      <td><%= link_to 'Detalhes', usuario_path(usuario) %></td>
      <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
      <td><% if usuario.login == 'admin' %>
            ---------
          <% else %>
          <%= link_to 'Apagar', usuario, confirm: 'Está certo disso?', method: :delete %>
          <% end %>
      </td>
    </tr>
   <% end %>
   </table>
  <% end %> 
  <br />

  <%= link_to 'Cadastrar usuário', new_usuario_path %>
  
<% else %>
<h3> Usuário </h3>
    <table>
      <tr bgcolor = "#9CC" >
        <th>Nome</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <tr bgcolor= "#FFF" >
        <td><%= current_usuario.name %></td>
        <td><%= current_usuario.email %></td>
        <td><%= link_to 'Detalhes', usuario_path(current_usuario) %></td>
        <td><%= link_to 'Editar', edit_usuario_path(current_usuario) %></td>
        <td><%= link_to 'Apagar', current_usuario, confirm: 'Está certo disso?', method: :delete %></td>
      </tr>
      </table>
<% end %>
<% end %>

<br />

<%= link_to 'voltar', root_path %>

